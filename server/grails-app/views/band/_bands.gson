import bandevents.grails4.Band
import bandevents.grails4.Event

model {
    List<Band> bands
}

json {
    bands bands, { Band band ->
        id band.id
        name band.name
        events band.events, { Event event ->
            name event.name
            date event.date
            bands event.bands, { Band participant ->
                name participant.name
            }
        }
    }
}